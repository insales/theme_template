{% comment %}
  галерея
{% endcomment %}
<div class="product-gallery gallery">
  {% comment %}
    основное изображение
  {% endcomment %}
  <div class="gallery-large_image
              sm-hidden xs-hidden"
  >
    <a  href="{{ product.first_image.original_url }}"

        title="{{ product.first_image.title }}"
        alt="{{ product.first_image.title }}"

        rel="right-click: true; selectors-effect: fade;"

        id="MagicZoom"
        class="MagicZoomPlus"
    >
      <img  src="{{ product.first_image.large_url }}"

            alt="{{ product.first_image.title }}"
            title="{{ product.first_image.title }}"
      />
    </a>
  </div>

  {% comment %}
    миниатюрки
  {% endcomment %}
  <div class="slider slider--gallery">
    <div class="slider-control--gallery">
      <div class="slider-left slider-left--gallery
                  js-slider-left"
      >
        <i class="fa fa-chevron-left"></i>
      </div>
      <div class="slider-right slider-right--gallery
                  js-slider-right"
      >
        <i class="fa fa-chevron-right"></i>
      </div>
    </div>

    <ul class="gallery-preview_list gallery-preview_list--horizontal
              slider-container js-slider--gallery"
    >
      {% for image in product.images %}

        <li class="gallery-preview padded-sides">
          <a  href="{{ image.original_url }}"

              alt="{{ image.title }}"
              title="{{ image.title }}"

              class="gallery-image
                    {% if forloop.first %} gallery-image--current {% endif %}
                    image-square"

              rel="zoom-id: MagicZoom"
              rev="{{ image.large_url }}"
          >
            <img src="{{ image.compact_url }}"

                  class="sm-hidden xs-hidden"
            />

            <img src="{{ image.large_url }}"
                  srcset="{{ image.original_url }} 2x"
            />
          </a>
        </li>

      {% endfor %}
    </ul>
  </div>
</div>
